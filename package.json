{
  "name": "LocalPDF_Studio",
  "version": "0.0.2",
  "description": "Offline, open-source, privacy-first PDF toolkit",
  "main": "src/main/main.js",
  "author": {
    "name": "Md. Alinur Hossain",
    "email": "alinur1160@gmail.com"
  },
  "license": "MPL-2.0",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac"
  },
  "devDependencies": {
    "electron": "^38.4.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "repository": "https://github.com/Alinur1/LocalPDF_Studio",
  "build": {
    "appId": "com.localpdfstudio.app",
    "productName": "LocalPDF Studio",
    "artifactName": "LocalPDF Studio ${os}.${ext}",
    "directories": {
      "output": "build",
      "buildResources": "assets/icons"
    },
    "files": [
      "src/**/*",
      "assets/icons/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/backend_${os}",
        "to": "assets/backend_${os}",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "assets/icons",
        "to": "assets/icons",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "assets/backend_${os}/**"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "Alinur1",
        "repo": "LocalPDF_Studio",
        "releaseType": "release"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/app_icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity",
      "icon": "assets/icons/app_icon_mac.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Office",
      "icon": "assets/icons/app_icon_linux.png",
      "desktop": {
        "Name": "LocalPDF Studio",
        "Comment": "Offline PDF editing suite",
        "Categories": "Office;",
        "StartupWMClass": "localpdf-studio",
        "MimeType": "application/pdf;"
      },
      "synopsis": "Offline, open-source PDF toolkit"
    }
  }
}